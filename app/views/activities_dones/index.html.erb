<p id="notice"><%= notice %></p>

<h1>Activities Dones</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Activities</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities_dones.each do |activities_done| %>
      <tr>
        <td><%= activities_done.user %></td>
        <td><%= activities_done.activities %></td>
        <td><%= link_to 'Show', activities_done %></td>
        <td><%= link_to 'Edit', edit_activities_done_path(activities_done) %></td>
        <td><%= link_to 'Destroy', activities_done, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

